{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "node_modules/.tsbuildinfo.app",

    "types": ["vite/client", "vuetify"],
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

  },
  "include": ["src/**/*.ts", "src/**/*.vue", "src/**/*.d.ts"]
}